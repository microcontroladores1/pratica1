0008,11 33,,        ACALL   T_1S
,,,
000A,75 A0 FB,,        MOV     P2, #(NOT (1 SHL 2))                    ; Simplesmente continuo deslocando o bit de
000D,11 33,,        ACALL   T_1S
,,,
000F,75 A0 F7,,        MOV     P2, #(NOT (1 SHL 3))
0012,11 33,,        ACALL   T_1S
,,,
0014,75 A0 EF,,        MOV     P2, #(NOT (1 SHL 4))
0017,11 33,,        ACALL   T_1S
,,,
0019,75 A0 DF,,        MOV     P2, #(NOT (1 SHL 5))
001C,11 33,,        ACALL   T_1S
,,,
001E,75 A0 BF,,        MOV     P2, #(NOT (1 SHL 6))
0021,11 33,,        ACALL   T_1S
,,,
0023,75 A0 7F,,        MOV     P2, #(NOT (1 SHL 7))
