000D,,,LED     EQU     P2                                      ; Atribui P2 à LED
,,,
0000,75 A0 FE,INICIO,INICIO: MOV     P2, #(NOT (1 SHL 0))
0003,11 33,,        ACALL   T_1S
,,,
